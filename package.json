{
  "name": "@ntf/kofi-alerts",
  "version": "1.2.0",
  "description": "Get alerts from Ko-Fi via JavaScript",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "pretest": "pnpm run build",
    "test": "tsx --tsconfig ./tests/nodejs/tsconfig.json ./tests/nodejs/test.cts",
    "build:prod": "tsup",
    "build": "pnpm run build:prod --sourcemap",
    "prepublishOnly": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N1ghtTheF0x/kofi-alerts.git"
  },
  "keywords": [
    "kofi","ko-fi","client","alerts",
    "esm",
    "cjs",
    "nodejs",
    "browser"
  ],
  "author": "N1ghtTheF0x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/N1ghtTheF0x/kofi-alerts/issues"
  },
  "homepage": "https://github.com/N1ghtTheF0x/kofi-alerts#readme",
  "dependencies": {
    "@microsoft/signalr": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "express": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest"
  }
}
