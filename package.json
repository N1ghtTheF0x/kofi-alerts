{
  "name": "@ntf/kofi-alerts",
  "version": "1.0.0",
  "description": "Get alerts from Ko-Fi via JavaScript",
  "files": [
    "./dist/**/*"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "pkgroll --src source",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N1ghtTheF0x/kofi-alerts.git"
  },
  "keywords": [
    "kofi","ko-fi","client","alerts","nodejs","browser","esm","cjs"
  ],
  "author": "N1ghtTheF0x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/N1ghtTheF0x/kofi-alerts/issues"
  },
  "homepage": "https://github.com/N1ghtTheF0x/kofi-alerts#readme",
  "dependencies": {
    "@microsoft/signalr": "latest"
  },
  "devDependencies": {
    "typescript": "latest",
    "pkgroll": "latest"
  }
}
